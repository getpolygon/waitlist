{
  "compilerOptions": {
    "strict": true,
    "noEmit": true,
    "allowJs": true,
    "target": "es5",
    "baseUrl": "src",
    "jsx": "preserve",
    "module": "esnext",
    "alwaysStrict": true,
    "skipLibCheck": true,
    "isolatedModules": true,
    "esModuleInterop": true,
    "inlineSourceMap": true,
    "resolveJsonModule": true,
    "moduleResolution": "node",
    "lib": [
      "dom",
      "dom.iterable",
      "esnext"
    ],
    "forceConsistentCasingInFileNames": true,
    "incremental": true,
    "paths": {
      "~/*": [
        "./*"
      ]
    }
  },
  "include": [
    "**/*.ts",
    "**/*.tsx",
    "next-env.d.ts",
    "tools/migrator/index.js"
  ],
  "exclude": [
    "node_modules"
  ]
}